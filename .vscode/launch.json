{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run arquivo atual (TS/JS ESM-ready)",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": [
        "--enable-source-maps",
        "--experimental-specifier-resolution=node"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server (ESM) — server/server.mjs",
      "program": "${workspaceFolder}/server/server.mjs",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": [
        "--enable-source-maps",
        "--experimental-specifier-resolution=node"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server (CJS) — server/server-pro.cjs",
      "program": "${workspaceFolder}/server/server-pro.cjs",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": ["--enable-source-maps"],
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
      "autoAttachChildProcesses": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Jest (runInBand)",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand", "--watchAll=false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      },
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach via PID",
      "processId": "${command:PickProcess}",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach 9229 (inspector)",
      "address": "localhost",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon — server.mjs",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server/server.mjs",
      "restart": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "runtimeArgs": [
        "--enable-source-maps",
        "--experimental-specifier-resolution=node"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "npm run dev (Vite)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Debug Frontend (Chrome @ http://localhost:5173)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Full Dev: Server + Vite + Chrome",
      "configurations": [
        "Server (ESM) — server/server.mjs",
        "npm run dev (Vite)",
        "Debug Frontend (Chrome @ http://localhost:5173)"
      ],
      "stopAll": true
    }
  ]
}
