{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@contracts/prescriptions": [
        "../../contracts/dist/prescriptions.d.ts",
        "../../contracts/src/prescriptions.ts"
      ],
      "@contracts": [
        "../../contracts/dist/index.d.ts",
        "../../contracts/src/index.ts"
      ],
      "@contracts/*": [
        "../../contracts/dist/*",
        "../../contracts/src/*"
      ]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/ai.ts",
    "src/src/**",
    "src/**/*.legacy.*"
  ]
}